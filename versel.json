{
    "version": 2,
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/src/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/dist/index.html"
      }
    ],
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "installCommand": "npm install",
          "buildCommand": "npm run build"
        }
      },
      {
        "src": "backend/src/index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "backend/src/**",
            "backend/config/**",
            "backend/models/**",
            "backend/routes/**",
            "backend/middleware/**",
            "backend/utils/**"
          ]
        }
      }
    ]
  }
  