{
    "version": 2,
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/src/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/dist/$1"
      }
    ],
    "builds": [
      {
        "src": "backend/src/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "installCommand": "npm install",
          "buildCommand": "npm run build"
        }
      }
    ]
  }