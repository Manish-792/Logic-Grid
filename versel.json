{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      },
      {
        "src": "backend/src/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/src/index.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "status": 200,
        "dest": "/index.html"
      }
    ]
  }